rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users can read any profile, but only write to their own.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == userId;
    }

    // Users can only read/write tasks they own.
    match /tasks/{taskId} {
      allow read, write: if request.auth != null && request.resource.data.ownerId == request.auth.uid;
    }

    // Team-related rules
    match /teams/{teamId} {
      // Allow read access to team members
      allow read: if request.auth != null && request.auth.uid in resource.data.members;
      
      // Allow creation if the creator is a member
      allow create: if request.auth != null && request.auth.uid in request.resource.data.members;

      // Allow updates only by team members
      allow update: if request.auth != null && request.auth.uid in resource.data.members;
      
      // For simplicity, only allow deletion by the first member (creator) - can be adjusted
      allow delete: if request.auth != null && resource.data.members[0] == request.auth.uid;
    }

    // Notes can only be read/written by their owner
     match /notes/{noteId} {
      allow read, write: if request.auth != null && request.resource.data.ownerId == request.auth.uid;
    }
  }
}
